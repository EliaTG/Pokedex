<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

    {{!-- {{#if hasRaces}} --}}
      <div class="card pokemon-card">
        <div class="card-header pokemon-header text-white">
          {{#if editMode}}Edit{{else}}Create{{/if}} a pokemon
        </div>
        <div class="card-pokemon">
          <form method="POST" action="{{#if editMode}}/edit-pokemon{{else}}/create-pokemon{{/if}}">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{hero.name}}{{/if}}" />
            </div>
            <div class="mb-3">
              <label for="type" class="form-label">Type</label>
              <input type="text" class="form-control" id="type" name="Type" value="{{#if editMode}}{{hero.type}}{{/if}}" />
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                name="Description"
                id="description"
                cols="60"
                rows="5"
                class="form-control"
              >{{#if editMode}}{{hero.description}}{{/if}}</textarea>
            </div>

            <div class="mb-3">
              <label for="region" class="form-label">Region </label>
              <select class="form-select" id="region" name="Region">
                <option {{#if editMode}}{{else}}selected{{/if}}>Select an option</option>

                {{#each races as |race|}}

                    {{#if (equalValue race.id ../hero.raceId )}}
                    <option selected value="{{race.id}}">{{race.name}}</option>
                    {{else}}
                    <option value="{{race.id}}">{{race.name}}</option>
                    {{/if}}
                  
                {{/each}} 
                
              </select>
            </div>
  

          {{#if editMode}}

          <input type="hidden" name="pokemonId" value="{{hero.id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Edit{{else}}Create{{/if}}</button>
           <a href="/" type="button" class="btn btn-warning">Back</a>
        </form>

      </div>
    </div>

    {{!-- {{else}} --}}

    {{!-- <h1 class="notcreated">There are not pokemon created</h1> --}}

    {{!-- {{/if}} --}}

    </div>
    <div class="col-md-6"></div>
</div>